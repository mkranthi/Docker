pipeline {

    agent any
    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'feature', url: 'https://github.com/mkranthi/kubernetes-automation.git'
            }
        }
        stage('create pod'){
            steps{
                sh "kubectl create -f sample-pod.yaml"
            }
        }
        stage('list the pods'){
            steps{
                sh "kubectl get pods"
            }
        }
    }
}

