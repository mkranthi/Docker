pipeline {
    agent any
    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'feature', url: 'https://github.com/mkranthi/kubernetes-automation.git'
            }
        }
        stage('Build Image') {
            steps {
                script {
                    sh 'docker build -t sample-image .'
                }
            }
        }
        stage('login into jfrog artifactory'){
            steps{
                sh "docker login https://devcompute.jfrog.io -u admin -p Devops@1"
            }
        }
        stage('docker tag'){
            steps{
                sh "docker tag sample-image devcompute.jfrog.io/itsoli-docker-develop-local/sample-image:latest"   
            }
        }
        stage('push into jfrog artifactory'){
            steps{
                sh "docker push devcompute.jfrog.io/itsoli-docker-develop-local/demo3-image:latest"
            }
        }
        
    }
}
